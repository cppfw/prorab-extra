# Maintainer: Ivan Gagis <igagis@gmail.com>
pkgname=prorab-extra
pkgver=$(version)
pkgrel=1
epoch=
pkgdesc="non-recursive GNU make-based build system additions for doxygen and pkg-config"
arch=('any')
url="http://github.com/igagis/prorab-extra"
license=('MIT')
groups=()

depends=('prorab')

#Need 'diffutils' package for 'cmp' program
makedepends=('myci' 'diffutils')

checkdepends=('myci' 'doxygen')

optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=() #Do not download any sources
noextract=()
md5sums=()
validpgpkeys=()

rootDir=$(pwd)/.. #project root directory

prepare() {
	cd "$rootDir"
}

build() {
	cd "$rootDir"
	make autojobs=true
}

check() {
	cd "$rootDir"
	make test
}

package() {
	cd "$rootDir"
	make DESTDIR="$pkgdir" PREFIX=/usr install
}
